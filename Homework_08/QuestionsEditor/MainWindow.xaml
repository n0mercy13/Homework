<Window x:Class="QuestionsEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuestionsEditor"
        mc:Ignorable="d"
        Title="Questions Editor" Height="450" Width="800">
    <Grid Background="#FF9798F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Menu/>
        <ListBox Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="buttonAddQuestion" Content="Add Question" HorizontalAlignment="Left" Margin="695,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="24" Width="95"/>

    </Grid>
</Window>
